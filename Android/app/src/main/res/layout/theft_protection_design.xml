<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="24dp">

    <TextView
        android:id="@+id/theftProtectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Theft Protection"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#263238"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <ImageView
        android:id="@+id/vehicleLockImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@android:drawable/ic_lock_power_off"
        android:contentDescription="Engine lock"
        app:layout_constraintTop_toBottomOf="@id/theftProtectionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <Switch
        android:id="@+id/engineToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Engine Control"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/vehicleLockImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/engineStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Engine is ON"
        android:textSize="16sp"
        android:textColor="#607D8B"
        app:layout_constraintTop_toBottomOf="@id/engineToggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
